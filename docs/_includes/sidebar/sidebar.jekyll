{%- assign module = page.collection | default: 'default' -%}
<script>
    var sidebar = new Vue({
        el: '#sidebar',
        data: {
            color: $.cookie('sidebar_color'),
            mini: $.cookie('sidebar_mini'),
            page: {
                module: "{{module}}",
                menus: {{ page.menus | jsonify }}
            },
            modules: {{ site.data.modules | jsonify }},
            sidebar: {{ site.data.sidebar[module] | jsonify }}
        }
    })
</script>