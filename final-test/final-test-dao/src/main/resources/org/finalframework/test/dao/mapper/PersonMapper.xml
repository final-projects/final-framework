<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.finalframework.test.dao.mapper.PersonMapper">

    <sql id="test">
        SELECT
        <foreach collection="update" item="item" separator=",">

        </foreach>
        <trim prefix="SELECT">age,created,id,last_modified,MAX(age) as max_age,name,ST_ASTEXT(point) as
            point,vcolumn,version,yn
        </trim>
        <trim prefix="FROM">${table}</trim>
        <where>ST_Distance(name,ST_GeomFromText(#{query.distance.location})) &a #{query.distance.distance}</where>
    </sql>

</mapper>
